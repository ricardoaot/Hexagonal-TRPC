{
    "compilerOptions": {
      "target": "es2016",
      /* Modules */
      "module": "commonjs",
      "rootDir": "./services",
      /* Emit */
      "outDir": "./dist",
      /* Interop Constraints */
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      /* Type Checking */
      "strict": true,
      /* Completeness */
      "skipLibCheck": true
    },
    "include": ["./services/**/*.ts"],
    "exclude": ["node_modules"]
  }